    <script>
        function validateSelection() {
            const radios = document.getElementsByName("proposal");
            let isChecked = false;
            for (const radio of radios) {
                if (radio.checked) {
                    isChecked = true;
                    break;
                }
            }
            if (!isChecked) {
                alert("Please select an option before proceeding.");
                return false;
            }
            return true;
        }
    </script>
